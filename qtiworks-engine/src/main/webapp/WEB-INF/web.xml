<?xml version="1.0"?>
<!--

Web deployment descriptor

-->
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">

  <display-name>QTIWorks</display-name>
  <description>QTIWorks Delivery Engine</description>

  <!-- Root ApplicationContext bootstrap -->
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      uk.ac.ed.ph.qtiworks.config.JpaProductionConfiguration
      uk.ac.ed.ph.qtiworks.config.DomainServicesConfiguration
      uk.ac.ed.ph.qtiworks.config.WebApplicationConfiguration
    </param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <!-- This filter makes sure we carefully log any Exceptions that might happen -->
  <filter>
    <filter-name>ExceptionLoggingFilter</filter-name>
    <filter-class>uk.ac.ed.ph.qtiworks.web.ExceptionLoggingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ExceptionLoggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Authentication and protected of instructor-only resources -->
  <filter>
    <filter-name>InstructorAuthenticationFilter</filter-name>
    <filter-class>uk.ac.ed.ph.qtiworks.web.authn.FakeWebAuthenticationFilter</filter-class>
    <init-param>
      <param-name>fakeLoginName</param-name>
      <param-value>dmckain66</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>InstructorAuthenticationFilter</filter-name>
    <url-pattern>/instructor/*</url-pattern>
  </filter-mapping>

  <!-- Dispatcher for initial demos. This will die off soon. -->
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
        uk.ac.ed.ph.qtiworks.config.JpaProductionConfiguration
        uk.ac.ed.ph.qtiworks.config.DomainServicesConfiguration
        uk.ac.ed.ph.qtiworks.config.MvcConfiguration
        uk.ac.ed.ph.qtiworks.config.WebApplicationConfiguration
      </param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/dispatcher/*</url-pattern>
  </servlet-mapping>

</web-app>
