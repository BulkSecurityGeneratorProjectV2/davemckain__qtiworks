          <variable identifier="ghfrench-01-verprem.SCORE" weightIdentifier="WEIGHT"/>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElse>
        <setOutcomeValue identifier="sectionB1-1-MODIFIEDSCORE">
          <sum>
            <variable identifier="ghfrench-01-verp1.SCORE"/>
            <variable identifier="ghfrench-01-verp2.SCORE"/>
          </sum>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
    <!--RE VERBS -->
    <outcomeCondition>
      <outcomeIf>
        <lt>
          <variable identifier="sectionB2-1-SCORE"/>
          <baseValue baseType="float">6</baseValue>
        </lt>
        <setOutcomeValue identifier="sectionB2-1-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-vreprem.SCORE" weightIdentifier="WEIGHT"/>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElse>
        <setOutcomeValue identifier="sectionB2-1-MODIFIEDSCORE">
          <sum>
            <variable identifier="ghfrench-01-vrep1.SCORE"/>
            <variable identifier="ghfrench-01-vrep2.SCORE"/>
          </sum>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
    <!-- IR VERBS -->
    <outcomeCondition>
      <outcomeIf>
        <lt>
          <variable identifier="sectionB3-1-SCORE"/>
          <baseValue baseType="float">6</baseValue>
        </lt>
        <setOutcomeValue identifier="sectionB3-1-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-virprem.SCORE" weightIdentifier="WEIGHT"/>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElse>
        <setOutcomeValue identifier="sectionB3-1-MODIFIEDSCORE">
          <sum>
            <variable identifier="ghfrench-01-virp1.SCORE"/>
            <variable identifier="ghfrench-01-virp2.SCORE"/>
          </sum>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
    <!-- AUXILLIARY VERBS AVOIR -->
    <outcomeCondition>
      <outcomeIf>
        <lt>
          <variable identifier="sectionB4-2a-SCORE"/>
          <baseValue baseType="float">6</baseValue>
        </lt>
        <setOutcomeValue identifier="sectionB4-2a-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-vaux1rem.SCORE" weightIdentifier="WEIGHT"/>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElse>
        <setOutcomeValue identifier="sectionB4-2a-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-vauxp1.SCORE"/>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
    <!-- AUXILLIARY VERBS ETRE -->
    <outcomeCondition>
      <outcomeIf>
        <lt>
          <variable identifier="sectionB4-2b-SCORE"/>
          <baseValue baseType="float">6</baseValue>
        </lt>
        <setOutcomeValue identifier="sectionB4-2b-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-vaux2rem.SCORE" weightIdentifier="WEIGHT"/>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElse>
        <setOutcomeValue identifier="sectionB4-2b-MODIFIEDSCORE">
          <variable identifier="ghfrench-01-vauxp2.SCORE"/>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
    <!-- collect the scores-->
    <setOutcomeValue identifier="CONJUGATION_SCORE">
      <sum>
        <variable identifier="sectionB1-1-MODIFIEDSCORE"/>
        <variable identifier="sectionB2-1-MODIFIEDSCORE"/>
        <variable identifier="sectionB3-1-MODIFIEDSCORE"/>
        <variable identifier="sectionB4-2a-MODIFIEDSCORE"/>
        <variable identifier="sectionB4-2b-MODIFIEDSCORE"/>
      </sum>
    </setOutcomeValue>
    <setOutcomeValue identifier="PRESENTTENSE_SCORE">
      <sum>
        <testVariables includeCategory="presentTense" variableIdentifier="SCORE" weightIdentifier="WEIGHT"/>
      </sum>
    </setOutcomeValue>
    <setOutcomeValue identifier="TEST_SCORE">
      <sum>
        <variable identifier="PRESENTTENSE_SCORE"/>
        <variable identifier="CONJUGATION_SCORE"/>
      </sum>
    </setOutcomeValue>
    <!--****************************SET UP FEEDBACK IDENTIFIERS
**********************-->
    <!-- Test conditions which led to EXIT_TEST -->
    <!-- The navigation mode is linear, so tests will proceed in order
with no skipping -->
    <!-- Some of these conditions will be met as we pass through the
test-->
    <!-- Do we need to check the appropriate step has been
started?-->
    <!-- This should not be important as the Feedback is not being
given until the end-->
    <!-- Feedback setting would be more complex if skipping is allowed
-->
    <outcomeCondition>
      <outcomeIf>
        <!-- The pronoun test will always have been attempted whatever
item is being processed -->
        <!-- If the score is 0 the test has ended -->
        <!-- If it is 1 we can go on-->
        <equal toleranceMode="exact">
          <variable identifier="ghfrench-01-01.SCORE"/>
          <baseValue baseType="float">0</baseValue>
        </equal>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_PRONOUNS</baseValue>
        </setOutcomeValue>
      </outcomeIf>
      <outcomeElseIf>
        <!-- Remedial conjugation of _ER verb  -->
        <!-- If the score is below 6  EXIT_TEST has been called -->
        <!-- Check that remedial test has been called -->
        <and>
          <lt>
            <variable identifier="sectionB1-2-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <lt>
            <variable identifier="sectionB1-1-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
        </and>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_ERCONJUGATIONAFTERREMEDY</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElseIf>
        <!-- Remedial conjugation of _RE verb  -->
        <!-- Check that remedial test has been called -->
        <and>
          <lt>
            <variable identifier="sectionB2-2-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <lt>
            <variable identifier="sectionB2-1-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
        </and>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_RECONJUGATIONAFTERREMEDY</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElseIf>
        <!-- Remedial conjugation of _IR verb  -->
        <!-- If the score is below 6 EXIT_TEST has been called -->
        <!-- Check that remedial test has been called -->
        <and>
          <lt>
            <variable identifier="sectionB3-2-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <lt>
            <variable identifier="sectionB3-1-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
        </and>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_IRCONJUGATIONAFTERREMEDY</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElseIf>
        <!-- Recognition of Auxilliary verbs  -->
        <!-- If the score is below 2 EXIT_TEST has been called -->
        <lt>
          <variable identifier="sectionB4-1-SCORE"/>
          <baseValue baseType="float">2</baseValue>
        </lt>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_AUXILLIARYIDENTFICATION</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElseIf>
        <!-- Remedial conjugation of avoir verb -->
        <!-- This is more complex because we have not thrown the candidate out-->
        <!-- So we must check that we are not processing the outcome of section B4.2b -->
        <!-- Also, because this is a 'during' feedback, we establish that it is timely-->
        <!-- If the score is below 6 -->
        <!-- Check that remedial test has been called -->
        <and>
          <lt>
            <variable identifier="ghfrench-01-vaux1rem.SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <lt>
            <variable identifier="ghfrench-01-vauxp1.SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <match>
            <variable identifier="ghfrench-01-vauxp2.completionStatus"/>
            <baseValue baseType="identifier">not_attempted</baseValue>
          </match>
          <not>
            <match>
              <variable identifier="ghfrench-01-vauxp1.completionStatus"/>
              <baseValue baseType="identifier">not_attempted</baseValue>
            </match>
          </not>
        </and>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_AVOIRCONJUGATIONAFTERREMEDY</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElseIf>
        <!-- Remedial conjugation of être  -->
        <!-- We are coming out of the test if the score is below 6 -->
        <!-- Check that remedial test has been called -->
        <and>
          <lt>
            <variable identifier="sectionB4-3b-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          <!-- DM: Next variable is not declared???
          <lt>
            <variable identifier="sectionB2-3b-SCORE"/>
            <baseValue baseType="float">6</baseValue>
          </lt>
          -->
        </and>
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">FAIL_ETRECONJUGATIONAFTERREMEDY</baseValue>
        </setOutcomeValue>
      </outcomeElseIf>
      <outcomeElse>
        <!-- We have come out of the test at the end -->
        <setOutcomeValue identifier="TEST_FEEDBACK">
          <baseValue baseType="identifier">END_FEEDBACK</baseValue>
        </setOutcomeValue>
      </outcomeElse>
    </outcomeCondition>
  </outcomeProcessing>
